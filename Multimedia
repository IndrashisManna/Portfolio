Sub CreateMultimediaPresentation()

    Dim pptApp As Object
    Dim pptPres As Object
    Dim slideIndex As Integer
    Dim slide As Object
    Dim shape As Object
    Dim bgShape As Object
    
    ' Create a new PowerPoint application and presentation
    Set pptApp = CreateObject("PowerPoint.Application")
    pptApp.Visible = True
    Set pptPres = pptApp.Presentations.Add

    ' Slide 1: Title Slide
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 1) ' 1 = ppLayoutTitle
    slide.Shapes(1).TextFrame.TextRange.Text = "Application of Multimedia"
    slide.Shapes(2).TextFrame.TextRange.Text = "Name: Indrashis Manna" & vbCrLf & _
                                               "Reg. NO.: 212760100110162" & vbCrLf & _
                                               "Roll No.: 27600121081" & vbCrLf & _
                                               "Subject: OECCS701B Multimedia Systems" & vbCrLf & _
                                               "Department: CSE" & vbCrLf & _
                                               "Year: 4th Year, Sec: " & vbCrLf & _
                                               "Academic Year: 2024-25" & vbCrLf & _
                                               "Year: 2021-22"

    ' Slide 2: Introduction to Multimedia
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Introduction to Multimedia"
    slide.Shapes(2).TextFrame.TextRange.Text = "Multimedia is the use of various forms of content such as text, audio, images, animations, and video to convey information."

    ' Slide 3: Types of Multimedia Applications
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Types of Multimedia Applications"
    slide.Shapes(2).TextFrame.TextRange.Text = "1. Educational Multimedia" & vbCrLf & _
                                               "2. Entertainment Multimedia" & vbCrLf & _
                                               "3. Business Multimedia"

    ' Slide 4: Educational Multimedia
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Educational Multimedia"
    slide.Shapes(2).TextFrame.TextRange.Text = "Multimedia is used in educational tools such as e-learning platforms, interactive textbooks, and virtual labs."

    ' Slide 5: Entertainment Multimedia
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Entertainment Multimedia"
    slide.Shapes(2).TextFrame.TextRange.Text = "In entertainment, multimedia is used in video games, movies, music videos, and virtual reality experiences."

    ' Slide 6: Business Multimedia
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Business Multimedia"
    slide.Shapes(2).TextFrame.TextRange.Text = "Businesses use multimedia for marketing, presentations, virtual meetings, and e-commerce."

    ' Slide 7: Multimedia in Healthcare
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Multimedia in Healthcare"
    slide.Shapes(2).TextFrame.TextRange.Text = "Multimedia applications are used in healthcare for medical imaging, patient education, and telemedicine."

    ' Slide 8: Multimedia in Education
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Multimedia in Education"
    slide.Shapes(2).TextFrame.TextRange.Text = "In education, multimedia enhances learning through interactive lessons, simulations, and educational games."

    ' Slide 9: Future of Multimedia
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Future of Multimedia"
    slide.Shapes(2).TextFrame.TextRange.Text = "The future of multimedia involves advancements in AR, VR, AI-driven content, and more immersive experiences."

    ' Slide 10: Conclusion
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 2) ' 2 = ppLayoutText
    slide.Shapes(1).TextFrame.TextRange.Text = "Conclusion"
    slide.Shapes(2).TextFrame.TextRange.Text = "Multimedia is an integral part of modern technology, revolutionizing how we communicate, learn, and entertain ourselves."

    ' Apply moving background to each slide
    Dim i As Integer
    For i = 1 To pptPres.Slides.Count
        Set slide = pptPres.Slides(i)
        Set bgShape = slide.Shapes.AddShape(msoShapeRectangle, 0, 0, pptPres.PageSetup.SlideWidth, pptPres.PageSetup.SlideHeight)
        bgShape.Fill.UserPicture "C:\Path\To\Your\Image.jpg" ' Replace with the path to your image
        bgShape.ZOrder msoSendToBack
        
        ' Animate the background
        With slide.TimeLine.MainSequence.AddEffect(bgShape, msoAnimEffectFly, , msoAnimTriggerAfterPrevious)
            .EffectParameters.Direction = msoAnimDirectionLeft
            .Timing.Duration = 10 ' 10 seconds duration, adjust as needed
            .Timing.RepeatCount = 0 ' Continuous repeat
        End With
    Next i
    
    ' Final slide: Thank You!
    slideIndex = slideIndex + 1
    Set slide = pptPres.Slides.Add(slideIndex, 3) ' 3 = ppLayoutTitleOnly
    slide.Shapes(1).TextFrame.TextRange.Text = "Thank You!"
    
End Sub
